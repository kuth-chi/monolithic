{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Infrastructure": {
    "PostgreSql": {
      "ConnectionString": "Host=localhost;Port=5432;Database=monolithic;Username=postgres;Password=postgres"
    },
    "SQLite": {
      "ConnectionString": "Data Source=monolithic_dev.db"
    },
    "Redis": {
      "ConnectionString": "localhost:6379"
    },
    "RabbitMq": {
      "Host": "localhost",
      "Port": 5672,
      "Username": "guest",
      "Password": "guest"
    }
  },
  "Cache": {
    "DashboardSnapshotSeconds": 15
  },
  "Platform": {
    "Notifications": {
      "Smtp": {
        "Host": "localhost",
        "Port": 1025,
        "UseSsl": false,
        "FromAddress": "no-reply@monolithic.local",
        "FromName": "Monolithic Platform",
        "Username": "",
        "Password": ""
      },
      "Sms": {
        "Provider": "stub",
        "ApiKey": "",
        "ApiSecret": "",
        "FromNumber": ""
      }
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "REPLACE_WITH_A_STRONG_SECRET_KEY_MIN_32_CHARS",
    "Issuer": "identity-server",
    "Audience": "web-app",
    "ExpiryMinutes": 60
  },
  "SoftDeletePurge": {
    // Platform-wide default: records soft-deleted for this many days are permanently removed.
    // Can be overridden per business via BusinessSetting.SoftDeleteRetentionDays.
    "SystemDefaultRetentionDays": 30,
    // How often the purge runner fires (hours). Default = 24 (once per day).
    "RunIntervalHours": 24
  }
}
