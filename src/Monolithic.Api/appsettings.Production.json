{
  "Logging": {
    "LogLevel": {
      // Suppress routine framework noise; only surface warnings and above in production
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Cache": {
    // Longer snapshot interval reduces Redis pressure in production
    "DashboardSnapshotSeconds": 60
  },
  "SoftDeletePurge": {
    "SystemDefaultRetentionDays": 30,
    "RunIntervalHours": 24
  },
  "SecurityHeaders": {
    // Enforce HTTPS-only and strict CSP in production (OWASP A05)
    "EnableStrictCsp": true,
    "EnableHsts": true
  },
  "Cors": {
    // Populate via env var override in docker-compose:
    //   Cors__AllowedOrigins__0=https://your-frontend.com
    // An empty array falls back to AllowAnyOrigin â€” always set at least one origin in production.
    "AllowedOrigins": []
  }
}
