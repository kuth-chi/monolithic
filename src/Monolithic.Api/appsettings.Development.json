{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Infrastructure": {
    "SQLite": {
      "ConnectionString": "Data Source=monolithic_dev.db"
    },
    "RabbitMq": {
      "Host": "localhost",
      "Port": 5672,
      "Username": "guest",
      "Password": "guest"
    }
  },
  "Cache": {
    "DashboardSnapshotSeconds": 10
  },
  "Jwt": {
    "SecretKey": "dev-super-secret-key-min-32-chars!!",
    "Issuer": "identity-server",
    "Audience": "web-app",
    "ExpiryMinutes": 60
  },
  "SoftDeletePurge": {
    // Shorter retention in dev so you can test the purge quickly.
    "SystemDefaultRetentionDays": 7,
    "RunIntervalHours": 1
  }
}
